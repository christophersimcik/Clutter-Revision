<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="25dp"
        android:height="25dp"
        android:gravity="center"
        >
    <shape
    android:shape="rectangle"
        android:tint="@color/new_red"
    >
    <corners
        android:radius="2dp">
    </corners>
    </shape>
</item>
    <item
        android:gravity="center"
        android:width="15dp"
        android:height="3dp">
        >
        <rotate
        android:fromDegrees="45"
        android:toDegrees="90"
        android:pivotX="50%"
        android:pivotY="50%">
        <shape
            android:shape="rectangle"
            android:tint="@color/cardview_light_background">
        </shape>
        </rotate>
    </item>
    <item
        android:gravity="center"
        android:width="3dp"
        android:height="15dp"
        >
        <rotate
            android:fromDegrees="45"
            android:toDegrees="-90"
            android:pivotX="50%"
            android:pivotY="50%">
        <shape
            android:shape="rectangle"
            android:tint="@color/cardview_light_background">
        </shape>
        </rotate>
    </item>

</layer-list>