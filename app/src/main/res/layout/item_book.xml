<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_light"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:id="@+id/container_title">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/thumb_book"
        android:layout_alignParentLeft="true">
    </ImageView>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumb_book"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end">
    </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/header_description"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_title"
        android:textSize="16sp"
        android:text="Description:">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_description"
        android:background="@color/default_text"
        android:layout_below="@id/header_description">
    </View>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_description"
        android:textSize="12sp">
    </TextView>
    <TextView
        android:id="@+id/header_author"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/text_description"
        android:text="Authors:">
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_authors"
        android:background="@color/default_text"
        android:layout_below="@id/header_author">
    </View>

    <TextView
        android:id="@+id/text_authors"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_authors"
        android:textSize="12sp">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_authors"
        >

        <TextView
            android:id="@+id/text_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">
        </TextView>

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/button_web"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/animation_google_search"
            android:background="@drawable/basic"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true">
        </ImageView>
    </RelativeLayout>

</RelativeLayout>