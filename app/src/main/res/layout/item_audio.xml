<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.example.clutterrevision.DeleteView
        android:id="@+id/audio_delete_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.example.clutterrevision.DeleteView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/audio_tab"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_orange_light"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/type"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/audio_1"></ImageButton>

            <com.example.clutterrevision.VisualAudio
                android:id="@+id/audio"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"></com.example.clutterrevision.VisualAudio>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>