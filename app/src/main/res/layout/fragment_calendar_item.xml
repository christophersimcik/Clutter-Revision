<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:gravity="center">
    <com.example.clutterrevision.TypeIndicatorView
        android:layout_centerInParent="true"
        android:id="@+id/calendar_indicator_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
    </com.example.clutterrevision.TypeIndicatorView>
    <RelativeLayout
        android:id="@+id/calendar_item_border"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@drawable/border_light">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/calendar_date_text_view">
        </TextView>
    </RelativeLayout>


</RelativeLayout>