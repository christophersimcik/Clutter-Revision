<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">
        <LinearLayout
            android:id="@+id/search_linear_layout"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_light"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search:"
                android:textSize="18sp"
                android:textColor="@color/default_text"
                android:id="@+id/search_header">
            </TextView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_bar_linear_layout"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
            <androidx.emoji.widget.EmojiEditText
                android:padding="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/search_bar">
            </androidx.emoji.widget.EmojiEditText>
                <ImageButton
                    android:id="@+id/search_submit"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@drawable/basic"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:id="@+id/status_linear_layout"
            android:layout_below="@id/search_linear_layout"
            android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textSize="24sp"
            android:id="@+id/status_text_view">
        </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/search_linear_layout"
            android:layout_toRightOf="@id/status_linear_layout"
            android:id="@+id/no_results_animation"
            android:background="@drawable/animation_no_results">
        </ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler_view"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_linear_layout">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</layout>